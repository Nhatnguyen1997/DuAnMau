<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Fragment.DoanhThu.DoanhThuFragment">
<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="doanh thu"
    android:textSize="20dp"
    android:paddingLeft="150dp"
    android:background="#52EC74"
    android:layout_margin="10dp"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <Button
        android:id="@+id/dt_btntungay"
        android:text="TỪ NGÀY"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/dt_btndenngay"
        android:layout_below="@+id/dt_btntungay"
        android:text="ĐẾN NGÀY"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <EditText
        android:id="@+id/dt_tungay"
        android:layout_width="match_parent"
        android:layout_marginLeft="130dp"
        android:layout_height="50dp"/>
    <EditText
        android:id="@+id/dt_denngay"
        android:layout_below="@+id/dt_tungay"
        android:layout_width="match_parent"
        android:layout_marginLeft="130dp"
        android:layout_height="wrap_content"/>
    </LinearLayout>
    </LinearLayout>
    <Button
        android:id="@+id/dt_btndoanhthu"
        android:layout_below="@+id/dt_btndenngay"
        android:text="Tổng doanh thu"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <EditText
        android:id="@+id/dt_doanhthu"
        android:layout_below="@+id/dt_btndoanhthu"
        android:hint="Tổng Doanh Thu "
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content"/>


</LinearLayout>